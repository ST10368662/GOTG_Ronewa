@model IEnumerable<GOTG.Ronewa.Web.Models.Donation>

@{
    ViewData["Title"] = "Donation Offerings";
}

<style>
    /* Borrowed theme styling for consistency */
    .dark-theme-container {
        background-color: #1a2b40;
        color: #f0f0f0;
        padding: 40px 0;
        margin-left: -15px;
        margin-right: -15px;
    }

    .text-accent-gold {
        color: #FFD700 !important;
    }

    .table-dark-custom {
        background-color: #2b3e50;
        border: 1px solid #4a607d;
    }

        .table-dark-custom thead th {
            border-bottom: 2px solid #FFD700;
            color: #FFD700;
            font-weight: 600;
            text-transform: uppercase;
        }

        .table-dark-custom tbody tr:hover {
            background-color: #3d5269;
        }

        .table-dark-custom td, .table-dark-custom th {
            border-color: #4a607d;
            vertical-align: middle;
        }

    .status-badge {
        display: inline-block;
        padding: .35em .65em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .50rem;
        background-color: #FFD700;
        color: #1a2b40;
    }
</style>

<div class="dark-theme-container container-fluid">
    <div class="container py-5">
        <h1 class="display-4 text-accent-gold mb-4">Donation Offerings Dashboard</h1>
        <p class="lead text-light mb-5">
            A comprehensive list of all pledged donations and the resources available for missions.
        </p>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success bg-dark text-white border-0 shadow-lg p-4 mb-4">
                <h4 class="alert-heading">Donation Received!</h4>
                <p>@TempData["Success"]</p>
            </div>
        }

        <div class="mb-4">
            <a asp-controller="Donations" asp-action="Create" class="btn btn-warning btn-lg shadow">
                <i class="fas fa-plus-circle"></i> Donate More Resources
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info bg-secondary text-white border-0 shadow-lg p-4 mt-5">
                <h4 class="alert-heading">No Donations Pledged Yet</h4>
                <p>The system is currently awaiting contributions. Your generosity can make a real difference!</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-dark-custom shadow-lg">
                    <thead>
                        <tr>
                            <th>Resource</th>
                            <th>Quantity</th>
                            <th>Donor</th>
                            <th>Donated At</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-white">@item.ResourceType</td>
                                <td><span class="status-badge">@item.Quantity</span></td>
                                <td>
                                    @if (item.Donor != null)
                                    {
                                        <span class="text-accent-gold">@item.Donor.UserName</span>
                                    }
                                    else
                                    {
                                        <span>Anonymous</span>
                                    }
                                </td>
                                <td>@item.DonatedAt.ToLocalTime().ToString("g")</td>
                                <td>@item.Details</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>