@model IEnumerable<GOTG.Ronewa.Web.Models.IncidentReport>

@{
    ViewData["Title"] = "Reported Incidents Dashboard";
}

<style>
    /* Borrowed theme styling for consistency */
    .dark-theme-container {
        background-color: #1a2b40; /* Deep Navy/Dark Blue */
        color: #f0f0f0; /* Light Gray/White text */
        padding: 40px 0;
        margin-left: -15px;
        margin-right: -15px;
    }

    .text-accent-gold {
        color: #FFD700 !important;
    }

    .table-dark-custom {
        background-color: #2b3e50; /* Darker card/table background */
        border: 1px solid #4a607d; /* Subtle border */
    }

        .table-dark-custom thead th {
            border-bottom: 2px solid #FFD700; /* Gold separator */
            color: #FFD700;
            font-weight: 600;
            text-transform: uppercase;
        }

        .table-dark-custom tbody tr:hover {
            background-color: #3d5269; /* Slightly lighter blue on hover */
        }

        .table-dark-custom td, .table-dark-custom th {
            border-color: #4a607d;
            vertical-align: middle;
        }

    .status-badge-reported {
        background-color: #dc3545; /* Red */
    }

    .status-badge-verified {
        background-color: #ffc107; /* Orange/Yellow */
        color: #1a2b40;
    }

    .status-badge-resolved {
        background-color: #28a745; /* Green */
    }

    .status-badge {
        display: inline-block;
        padding: .35em .65em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .50rem;
    }
</style>

<div class="dark-theme-container container-fluid">
    <div class="container">

        <h1 class="display-4 text-accent-gold mb-4">Reported Incidents Dashboard</h1>
        <p class="lead text-light mb-5">Track the status of all incoming disaster reports and see where our immediate response teams are needed.</p>

        <!-- Button to report a new incident -->
        <div class="mb-4">
            <a asp-controller="IncidentReports" asp-action="Create" class="btn btn-danger btn-lg shadow">
                <i class="fas fa-plus-circle"></i> Submit New Report
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info bg-secondary text-white border-0 shadow-lg p-4 mt-5">
                <h4 class="alert-heading">No Incidents Reported Yet</h4>
                <p>The system is currently clear. If you are aware of an unfolding situation, please use the "Submit New Report" button above.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-dark-custom shadow-lg">
                    <thead>
                        <tr>
                            <th>Incident Title</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Reported At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-white">@item.Title</td>
                                <td>@item.Location</td>
                                <td>
                                    @{
                                        string badgeClass = item.Status switch
                                        {
                                            GOTG.Ronewa.Web.Models.IncidentStatus.Reported => "status-badge-reported",
                                            GOTG.Ronewa.Web.Models.IncidentStatus.Verified => "status-badge-verified",
                                            GOTG.Ronewa.Web.Models.IncidentStatus.Resolved => "status-badge-resolved",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="status-badge @badgeClass">
                                        @item.Status.ToString()
                                    </span>
                                </td>
                                <td>
                                    @item.ReportedAt.ToString("yyyy-MM-dd HH:mm") UTC
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
