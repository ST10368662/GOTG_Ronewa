@model IEnumerable<GOTG.Ronewa.Web.Models.VolunteerProfile>

@{
    ViewData["Title"] = "Registered Volunteers";
}

<style>
    /* Borrowed theme styling for consistency */
    .dark-theme-container {
        background-color: #1a2b40;
        color: #f0f0f0;
        padding: 40px 0;
        margin-left: -15px;
        margin-right: -15px;
    }

    .text-accent-gold {
        color: #FFD700 !important;
    }

    .table-dark-custom {
        background-color: #2b3e50;
        border: 1px solid #4a607d;
    }

        .table-dark-custom thead th {
            border-bottom: 2px solid #FFD700;
            color: #FFD700;
            font-weight: 600;
            text-transform: uppercase;
        }

        .table-dark-custom tbody tr:hover {
            background-color: #3d5269;
        }

        .table-dark-custom td, .table-dark-custom th {
            border-color: #4a607d;
            vertical-align: middle;
        }

    .status-badge {
        display: inline-block;
        padding: .35em .65em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .50rem;
    }

    .status-badge-pending {
        background-color: #ffc107;
        color: #1a2b40;
    }

    .status-badge-active {
        background-color: #28a745;
        color: #f0f0f0;
    }
</style>

<div class="dark-theme-container container-fluid">
    <div class="container py-5">
        <h1 class="display-4 text-accent-gold mb-4">@ViewData["Title"] Dashboard</h1>
        <p class="lead text-light mb-5">
            These are the people ready to serve. Find the right skills for the task at hand.
        </p>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success bg-dark text-white border-0 shadow-lg p-4 mb-4">
                <h4 class="alert-heading">Thank You!</h4>
                <p>@TempData["Success"]</p>
            </div>
        }

        <div class="mb-4">
            <a asp-controller="Volunteers" asp-action="Register" class="btn btn-success btn-lg shadow">
                <i class="fas fa-plus-circle"></i> Register New Volunteer
            </a>
            <a asp-controller="Volunteers" asp-action="MyTasks" class="btn btn-warning btn-lg shadow">
                <i class="fas fa-tasks"></i> View My Assigned Tasks
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info bg-secondary text-white border-0 shadow-lg p-4 mt-5">
                <h4 class="alert-heading">No Volunteers Registered</h4>
                <p>We need more hands! Please encourage others to register to help.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-dark-custom shadow-lg">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Skills</th>
                            <th>Phone</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-white">@item.User?.UserName</td>
                                <td>@item.Skills</td>
                                <td>@item.Phone</td>
                                <td>
                                    @{
                                        string statusClass = item.Status.ToString().ToLower() switch
                                        {
                                            "pending" => "status-badge-pending",
                                            "active" => "status-badge-active",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="status-badge @statusClass">
                                        @item.Status.ToString()
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>